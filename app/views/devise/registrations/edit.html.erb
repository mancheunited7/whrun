<div class="form-wrapper">
  <h2>マイメニュー</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-item">
      <!--<%= f.label :メールアドレス %><br />-->
      <%= f.email_field :email, autofocus: true ,placeholder: "メールアドレス"%>
    </div>

    <div class="form-item">
      <!--<%= f.label :ユーザー名 %><br />-->
      <%= f.text_field :name, placeholder: "ユーザー名"%>
    </div>

    <% if @user.provider.blank? %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-item">
    <!--<%= f.label :password %> <i>(変更しない場合は、空白のままでOK!!)</i><br />-->
      <%= f.password_field :password, autocomplete: "off",placeholder: "新たなパスワードを入力" %>
    <!--<% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>-->
      </div>

      <div class="form-item">
        <!--<%= f.label :password_confirmation %><br />-->
        <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "確認用パスワード" %>
      </div>

      <div class="form-item">
        <!--<%= f.label :current_password %> <i>(変更には現在のパスワードを!!)</i><br />-->
        <%= f.password_field :current_password, autocomplete: "off",placeholder:"変更には現在のパスワードを入力"  %>
      </div>

    <% end %>


  <!--  <%= f.label :プロフィール画像 %>-->
    <div class="field">
      <%= profile_img(@user) if profile_img(@user) %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>

    <div class="button-panel">
      <%= f.submit "更新",class: "button" %>
    </div>
  <% end %>

